import java.util.Scanner;
class Employee {
    public double calculateSalary(double baseSalary) {
        return baseSalary;
    }
    public double calculateSalary(double baseSalary, double bonus) {
        return baseSalary + bonus;
    }
    public double calculateSalary(double baseSalary, double bonus, double deductions) {
        return baseSalary + bonus - deductions;
    }
}
public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Employee emp = new Employee();
        String line1 = sc.nextLine(); // base salary
        String line2 = sc.hasNextLine() ? sc.nextLine() : "";
        String line3 = sc.hasNextLine() ? sc.nextLine() : "";
        double baseSalary = Double.parseDouble(line1.trim());
        double bonus = line2.isEmpty() ? 0 : Double.parseDouble(line2.trim());
        double deductions = line3.isEmpty() ? 0 : Double.parseDouble(line3.trim());
        double finalSalary;
        if (!line2.isEmpty() && !line3.isEmpty()) {
            finalSalary = emp.calculateSalary(baseSalary, bonus, deductions);
        } else if (!line2.isEmpty()) {
            finalSalary = emp.calculateSalary(baseSalary, bonus);
        } else {
            finalSalary = emp.calculateSalary(baseSalary);
        }
        System.out.println((int) finalSalary);
        sc.close();
    }
}